{
    "name": "game-canvas-base",
    "version": "1.0.0",
    "description": "game project base",
    "main": "main.js",
    "scripts": {
        "clean": "rm -rf css/*.* && rm -rf js/*.*",
        "tsc": "tsc",
        "scss": "sass  scss:css",
        "watch:scss": "npm run scss -- --watch",
        "watch:tsc": "npm run tsc -- --watch",
        "watch": "npm run clean && npm-run-all --parallel watch:*",
        "build": "npm run clean && npm run tsc && npm run css "
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ddalairac/game-canvas-base.git"
    },
    "keywords": [
        "typescript",
        "scss",
        "game",
        "training"
    ],
    "author": "Dalairac Diego",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ddalairac/game-canvas-base/issues"
    },
    "homepage": "https://github.com/ddalairac/game-canvas-base#readme",
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "scss": "^0.2.4",
        "typescript": "^4.2.3"
    }
}
